{
  "name": "@sidstack/mcp-server",
  "version": "0.4.3",
  "description": "MCP Server for SidStack - task management, knowledge, and impact analysis for Claude Code",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "sidstack-mcp": "./dist/server.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "mcp",
    "claude",
    "sidstack",
    "ai",
    "task-management",
    "knowledge",
    "impact-analysis"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/server.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run --config vitest.config.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@sidstack/shared": "workspace:*",
    "ws": "^8.18.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.5.10",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  }
}
